<div class="card text-center">
    <div class="card-header">
        <span>{{ match.playerOneScore }}</span>
        <strong> : </strong>
        <span>{{ match.playerTwoScore }}</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <span>{{ match.playerOne.fullName }}</span>
            <strong>vs</strong>
            <span>{{ match.playerTwo.fullName }}</span>
        </h5>
        <p class="card-text">
            Duration: {{ match.duration }} minutes
        </p>
        <a href="{{ path('match_view', {'matchId': match.id}) }}" class="btn btn-sm btn-success">Details</a>
    </div>
    <div class="card-footer text-muted">
        played {{ match.endedAt|ago }}
    </div>
</div>